            <ui:ScrollView name="ContentOverview" class="bl-tab-panel  bl-tab-panel--active">
                <ui:VisualElement class="bl-card bl-card--subtle">
                    <ui:VisualElement class="bl-card__header">
                        <ui:Label text="Features" class="bl-card__title"/>
                    </ui:VisualElement>
                    <ui:Label text="Sample of available features in Core." class="bl-card__subtitle"/>
                    <ui:VisualElement class="bl-feature-grid bl-feature-grid--two">
                        <ui:VisualElement class="bl-feature-blurb">
                            <ui:Label text="Collections &amp; DynamicHashMap" class="bl-feature-blurb__title"/>
                            <ui:Label text="Specialized containers and fast hash maps for jobs and runtime ECS code." class="bl-feature__description"/>
                        </ui:VisualElement>
                        <ui:VisualElement class="bl-feature-blurb">
                            <ui:Label text="Change Filter Tracking" class="bl-feature-blurb__title"/>
                            <ui:Label text="Measure and warn when components trigger change filters too frequently." class="bl-feature__description"/>
                        </ui:VisualElement>
                        <ui:VisualElement class="bl-feature-blurb">
                            <ui:Label text="EntityCommands" class="bl-feature-blurb__title"/>
                            <ui:Label text="Unified interface shared across EntityManager, ECB, and bakers." class="bl-feature__description"/>
                        </ui:VisualElement>
                        <ui:VisualElement class="bl-feature-blurb">
                            <ui:Label text="Facets" class="bl-feature-blurb__title"/>
                            <ui:Label text="Replacement for IApsect to access collections of data via lookups or chunk iteration." class="bl-feature__description"/>
                        </ui:VisualElement>
                        <ui:VisualElement class="bl-feature-blurb">
                            <ui:Label text="Iterators &amp; Jobs" class="bl-feature-blurb__title"/>
                            <ui:Label text="High-performance iteration helpers plus custom jobs for hash maps and deferred batches." class="bl-feature__description"/>
                        </ui:VisualElement>
                        <ui:VisualElement class="bl-feature-blurb">
                            <ui:Label text="Functions" class="bl-feature-blurb__title"/>
                            <ui:Label text="Extend jobs safely so teammates or modders can plug in new logic." class="bl-feature__description"/>
                        </ui:VisualElement>
                        <ui:VisualElement class="bl-feature-blurb">
                            <ui:Label text="Settings, K, Singleton" class="bl-feature-blurb__title"/>
                            <ui:Label text="Type-safe settings, enum-like K values, and boilerplate-free singleton collections." class="bl-feature__description"/>
                        </ui:VisualElement>
                        <ui:VisualElement class="bl-feature-blurb">
                            <ui:Label text="Spatial &amp; States" class="bl-feature-blurb__title"/>
                            <ui:Label text="Fast spatial hash generation plus bitfield-driven state mapping to components." class="bl-feature__description"/>
                        </ui:VisualElement>
                        <ui:VisualElement class="bl-feature-blurb">
                            <ui:Label text="Utility &amp; Global Random" class="bl-feature-blurb__title"/>
                            <ui:Label text="Thread-safe random access, pooled native lists, and DOTS-friendly helpers." class="bl-feature__description"/>
                        </ui:VisualElement>
                    </ui:VisualElement>
                </ui:VisualElement>
            </ui:ScrollView>
            <ui:VisualElement name="ContentConfig" class="bl-tab-panel bl-tab-panel--split">
                <ui:ScrollView class="bl-tab-panel__scroll">
                    <ui:VisualElement class="bl-card bl-card--feature">

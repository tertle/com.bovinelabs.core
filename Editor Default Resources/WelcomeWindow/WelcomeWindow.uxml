                    <ui:Button text="Apply Changes" name="ApplyChanges" class="bl-button bl-button--primary bl-button--block"/>
                </ui:VisualElement>
            </ui:VisualElement>
            <ui:ScrollView name="ContentPackages" class="bl-tab-panel">

                        <BovineLabs.Core.Editor.Welcome.PackageElement name="BridgeLink" title="Bridge" description="Hybrid layer for Entities worlds for Audio, Cinemachine and Lights." url="https://gitlab.com/tertle/com.bovinelabs.bridge" package-name="com.bovinelabs.bridge" git-url="https://gitlab.com/tertle/com.bovinelabs.bridge.git"/>
                        <BovineLabs.Core.Editor.Welcome.PackageElement name="EssenceLink" title="Essence" description="Stats library built to pair with Reaction." url="https://gitlab.com/tertle/com.bovinelabs.essence" package-name="com.bovinelabs.essence" git-url="https://gitlab.com/tertle/com.bovinelabs.essence.git" dependencies="com.bovinelabs.reaction"/>
                        <BovineLabs.Core.Editor.Welcome.PackageElement name="NerveLink" title="Nerve" description="Entities game state framework with NetCode support." url="https://gitlab.com/tertle/com.bovinelabs.nerve" package-name="com.bovinelabs.nerve" git-url="https://gitlab.com/tertle/com.bovinelabs.nerve.git"/>
                        <BovineLabs.Core.Editor.Welcome.PackageElement name="ReactionLink" title="Reaction" description="Condition + Action framework for DOTS gameplay pipelines." url="https://gitlab.com/tertle/com.bovinelabs.reaction" package-name="com.bovinelabs.reaction" git-url="https://gitlab.com/tertle/com.bovinelabs.reaction.git"/>
                        <BovineLabs.Core.Editor.Welcome.PackageElement name="RecastLink" title="Recast" description="HPC# port of Recast for Unity using Burst, Collections, and Mathematics." url="https://gitlab.com/tertle/com.bovinelabs.recast" package-name="com.bovinelabs.timeline" git-url="https://gitlab.com/tertle/com.bovinelabs.recast.git"/>
                        <BovineLabs.Core.Editor.Welcome.PackageElement name="TimelineLink" title="Timeline" description="Burst-friendly DOTS implementation of Unity Timeline." url="https://gitlab.com/tertle/com.bovinelabs.timeline" package-name="com.bovinelabs.timeline" git-url="https://gitlab.com/tertle/com.bovinelabs.timeline.git"/>
                    </ui:VisualElement>
                </ui:VisualElement>

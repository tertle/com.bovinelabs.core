                    <ui:VisualElement class="bl-card__header">
                        <ui:Label text="Component tier" class="bl-card__title"/>
                    </ui:VisualElement>
                    <ui:Label text="Libraries that provide the foundations for your game." class="bl-card__subtitle"/>
                    <ui:VisualElement class="bl-library-grid">
                        <BovineLabs.Core.Editor.Welcome.PackageElement name="GroveLink" title="Grove" description="Node-based graphs for AI, dialogue, quests, and more." url="https://github.com/tertle/com.bovinelabs.grove" package-name="com.bovinelabs.grove"/>
                        <BovineLabs.Core.Editor.Welcome.PackageElement name="QuillLink" title="Quill" description="Debug drawing for entities." url="https://github.com/tertle/com.bovinelabs.quill" package-name="com.bovinelabs.quill"/>
                        <BovineLabs.Core.Editor.Welcome.PackageElement name="SolaceLink" title="Solace" description="Unity Services integration tailored for DOTS/ECS." url="https://github.com/tertle/com.bovinelabs.solace" package-name="com.bovinelabs.solace" dependencies="com.bovinelabs.reaction"/>
                        <BovineLabs.Core.Editor.Welcome.PackageElement name="TabulateLink" title="Tabulate" description="Sheet editor for data authoring." url="https://github.com/tertle/com.bovinelabs.tabulate" package-name="com.bovinelabs.tabulate"/>
                        <BovineLabs.Core.Editor.Welcome.PackageElement name="VibeLink" title="Vibe (coming soon)" description="Feel library for DOTS built on timeline."/>
                    </ui:VisualElement>
                </ui:VisualElement>
                <ui:VisualElement class="bl-card bl-card--feature">
                    <ui:VisualElement class="bl-card__header">
                        <ui:Label text="System tier" class="bl-card__title"/>
                    </ui:VisualElement>
                    <ui:Label text="Built on the foundations, advanced libraries built around the BovineLabs ecosystem." class="bl-card__subtitle"/>
                    <ui:VisualElement class="bl-library-grid">
                        <BovineLabs.Core.Editor.Welcome.PackageElement name="TraverseLink" title="Traverse" description="NavMesh, avoidance, and movement built on Recast/Detour." url="https://github.com/tertle/com.bovinelabs.traverse" package-name="com.bovinelabs.traverse"/>
                        <BovineLabs.Core.Editor.Welcome.PackageElement name="PerceptionLink" title="Perception (coming soon)" description="Line of sight, fog of war, and memory systems."/>
                    </ui:VisualElement>
                </ui:VisualElement>

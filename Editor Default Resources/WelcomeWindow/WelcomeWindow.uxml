                        </ui:VisualElement>
                        <ui:Label text="Project-wide preferences." class="bl-card__subtitle"/>
                        <ui:VisualElement class="bl-feature-list">
                            <BovineLabs.Core.Editor.Welcome.FeatureToggle text="Menu location" name="MenuLocationToggle" define="BL_TOOLS_MENU" description="Move the menu root from BovineLabs/ to Tools/BovineLabs/"/>
                        </ui:VisualElement>
                    </ui:VisualElement>
                    <ui:VisualElement class="bl-card bl-card--feature">
                        <ui:VisualElement class="bl-card__header">
                            <ui:Label text="Local configuration" class="bl-card__title"/>
